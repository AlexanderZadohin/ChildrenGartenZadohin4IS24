        <ComboBox Name="MarkCmb" HorizontalAlignment="Left" Margin="426,185,0,0" VerticalAlignment="Top" Width="187"/>
        <Button Content="Добавить" Name="AddAcountingBtn" HorizontalAlignment="Left" Margin="216,238,0,0" VerticalAlignment="Top" Height="22" Width="132" Click="AddAcountingBtn_Click"/>
        <Button Content="Назад" Name="BackBtn" HorizontalAlignment="Left" Margin="426,238,0,0" VerticalAlignment="Top" Height="22" Width="131" Click="BackBtn_Click"/>
